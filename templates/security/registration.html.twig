{% extends 'base.html.twig' %}

{% block title %} Hello !{% endblock %}

{% block body %}

  {% if editMode %}
    <h1>Veuillez vous inscrire ! </h1>
  {% else %}
    <h1>Modifiez votre profil</h1>
  {% endif %}

  {{ form_start(form) }}

  {{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'Marsupilami'}}) }}
  {{ form_row(form.email, {'label': 'Adresse email', 'attr': {'placeholder': 'marsu@gmail.com'}}) }}
  {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe !'}}) }}
  {{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe', 'attr': {'placeholder': 'Répéter votre mot de passe'}}) }}
  {{ form_row(form.age, {'label': 'age', 'attr': {'placeholder': '46'}}) }}
  {{ form_row(form.family, {'label': 'Famille', 'attr': {'placeholder': 'Lorem'}}) }}
  {{ form_row(form.race, {'label': 'race'}) }}
  {{ form_row(form.food, {'label': 'Nourriture', 'attr': {'placeholder': 'poisson'}}) }}

  {% if editMode %}
    <button type="submit" class="btn btn-success">Inscription</button>
  {% else %}
    <button type="submit" class="btn btn-success">Modifier profil</button>
  {% endif %}

  {{ form_end(form) }}




{% endblock %}
